<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.16"/>
  <template class="GamesGamepadSelectPopover" parent="GtkPopover">
    <child>
      <object class="GtkStack" id="popover_stack">
        <property name="visible">True</property>
        <property name="can_focus">False</property>
        <property name="transition_type">slide-right</property>
        <property name="margin-top">12</property>
        <property name="margin-bottom">12</property>
        <property name="margin-start">21</property>
        <property name="margin-end">21</property>
        <child>
          <object class="GtkListBox" id="player_list">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="tooltip_text" translatable="yes">Select a player</property>
            <property name="selection_mode">none</property>
          </object>
          <packing>
          </packing>
        </child>
        <child>
          <object class="GtkListBox" id="gamepad_list">
            <property name="visible">True</property>
            <property name="can_focus">False</property>
            <property name="tooltip_text" translatable="yes">Select your gamepad device. You can also press a button on your gamepad to select it.</property>
          </object>
          <packing>
          </packing>
        </child>
      </object>
      <packing>
      </packing>
    </child>
  </template>
</interface>
